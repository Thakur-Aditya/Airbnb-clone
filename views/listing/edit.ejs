<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <br /><br /><br />
      <h1>Edit your listing</h1>

      <form
        action="/listings/<%=listing._id%>?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Enter Title</label>
          <input
            type="text"
            id="title"
            name="listing[title]"
            placeholder="Enter the Title"
            class="form-control"
            required
            value="<%=listing.title%>"
          />
          <div class="invalid-feedback">Please enter a valid Title</div>
          <br />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Enter Description</label>
          <textarea
            id="description"
            name="listing[description]"
            placeholder="Enter description"
            cols="30"
            class="form-control"
            required
            rows="10"
          >
<%=listing.description%></textarea
          >
          <div class="invalid-feedback">Please enter a valid Description</div>
          <br />
        </div>
        <img src="<%= listing.image.url %>" alt="<%= listing.image.filename %>" class="editimg">
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            id="image"
            type="file"
            name="listing[image]"
            class="form-control"
          /><br />
        </div>
        <div class="row">
          <div class="mb-3 col-4">
            <label for="price" class="form-label">Enter Price</label>
            <input
              id="price"
              type="listing[number]"
              required
              name="listing[price]"
              placeholder="Enter Price"
              class="form-control"
              value="<%=listing.price%>"
            />
            <div class="invalid-feedback">Please enter a valid price</div>
            <br />
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Enter Country</label>
            <input
              id="country"
              type="text"
              name="listing[country]"
              required
              placeholder="Enter Country"
              class="form-control"
              value="<%=listing.country%>"
            />
            <div class="invalid-feedback">Please enter a valid country</div>
            <br />
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Enter Location</label>
          <input
            id="location"
            type="text"
            name="listing[location]"
            placeholder="Enter Location"
            required
            class="form-control"
            value="<%=listing.location%>"
          />
          <div class="invalid-feedback">Please enter a valid location</div>
          <br />
        </div>

        <button class="btn btn-danger">Submit</button>
        <br /><br /><br />
      </form>
    </body>
  </div>
</div>
